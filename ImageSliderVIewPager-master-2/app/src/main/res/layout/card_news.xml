<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#f5f5f5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:src="@drawable/poto"


            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/txt_date"
            android:layout_toStartOf="@+id/txt_date"
            android:id="@+id/img_profile" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lewi Blood"
            android:textColor="#000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="54dp"
            android:layout_alignBaseline="@+id/img_more"
            android:layout_alignBottom="@+id/img_more"
            android:layout_marginStart="54dp"
            android:id="@+id/txt_name" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wed, 22 Nov 2017"
            android:textColor="#959595"

            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/txt_name"
            android:layout_alignLeft="@+id/txt_name"
            android:layout_alignStart="@+id/txt_name"
            android:id="@+id/txt_date" />

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:src="@drawable/more"

            android:layout_marginLeft="247dp"
            android:layout_marginTop="17dp"
            android:layout_marginStart="247dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/txt_name"
            android:layout_alignStart="@+id/txt_name" />

        <ImageView
            android:id="@+id/thumb_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/pi"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/img_more"
            android:layout_centerHorizontal="true" />

        <TextView
            android:ellipsize="end"
            android:id="@+id/title_text"
            android:text="This People Can Change Indonesia be "
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/thumb_img"
            android:layout_centerHorizontal="true"
            android:background="#80000000"
            android:padding="8dp"
            android:gravity="center"
            android:lines="1"
            android:textAppearance="?android:attr/textAppearanceLargeInverse" />

        <ImageView
            android:id="@+id/img_admire"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="16dp"
            android:layout_below="@id/thumb_img"
            android:layout_marginTop="14dp"

            />

        <ImageButton
            android:id="@+id/btn_lights"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#0000"
            app:srcCompat="@drawable/lightt"
            android:layout_alignTop="@+id/img_admire"
